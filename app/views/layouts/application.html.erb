<!DOCTYPE html>
<html>
<head>
  <title>Carpoolers</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="fb-root"></div>
<script>
    // Additional JS functions here
    window.fbAsyncInit = function() {
        FB.init({
            appId      : '479024818787146', // App ID
            channelUrl : '//localhost:3000/channel.html', // Channel File
            status     : true, // check login status
            cookie     : true, // enable cookies to allow the server to access the session
            xfbml      : true  // parse XFBML
        });

        function get_status(){
            if (document.getElementById("sign_out")) {return;}
            FB.getLoginStatus(function(response) {
                console.log("determined status "  + response.status)   ;
                if (response.status === 'connected') {
                    // the user is logged in and has authenticated app - get info in session
                    //if no current_user (use the html elem sign_out

                    window.location = '/auth/facebook/callback';

                }
            });
        };
    };


    function login() {
        console.log("in logni function");
        console.log("already connected");
        window.location = '/auth/facebook/callback';
    }

    function testAPI() {
        console.log('Welcome!  Fetching your information.... ');
        FB.api('/me', function(response) {
            console.log('Good to see you, ' + response.name + '  ' + response.gender + '  '+ response.birthday);
        });
    }


    // Load the SDK Asynchronously
    (function(d){
        var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement('script'); js.id = id; js.async = true;
        js.src = "//connect.facebook.net/en_US/all.js";
        ref.parentNode.insertBefore(js, ref);
    }(document));
</script>

<div id="LoginDiv" >
<div class="fb-login-button" data-show-faces="true" data-width="200" data-max-rows="1"
    onlogin="login()" scope="email,user_birthday"></div>


<div id="user_nav">
  <% if current_user %>
      <br>
      <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% end %>
</div>
</div>

<button onclick="testAPI()"></button>
<%= yield %>

</body>
</html>
