<% for item in new_passengers %>
$("#passengers_feed").append('<%=j render(item) %>');
$("#<%=item.id%>").hide();
$("#<%=item.id%>").fadeIn(500);
<% end %>
<% if (new_passengers.length != 0) %>
$("#passenger_last_update").html("<%=new_passengers.at(0).updated_at%>");
<%end %>
$("#passengers_feed").scrollTop(0);
